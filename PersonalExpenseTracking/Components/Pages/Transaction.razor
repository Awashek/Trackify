{
    try
    {
        // Validate the transaction fields
        if (string.IsNullOrWhiteSpace(newTransaction.Description) || newTransaction.Description.Any(char.IsDigit))
        {
            throw new Exception("Description cannot be empty or contain numbers.");
        }

        if (newTransaction.Amount <= 0)
        {
            throw new Exception("Amount must be greater than zero.");
        }

        if (string.IsNullOrWhiteSpace(newTransaction.Type))
        {
            throw new Exception("Transaction type is required.");
        }

        // Prepare the new transaction object
        var transactionToAdd = new Models.Transaction
        {
            Description = newTransaction.Description,
            Date = newTransaction.Date == default ? DateTime.Now : newTransaction.Date,
            Amount = newTransaction.Amount,
            Type = newTransaction.Type,
            Tags = newTransaction.Tags,
            Title = newTransaction.Title,
            
        };

        // Call the service to add the transaction
        await TransactionService.AddTransaction(transactionToAdd);

        // If the transaction type is "Debt", also add it to the debts
        if (newTransaction.Type.Equals("Debt", StringComparison.OrdinalIgnoreCase))
        {
            if (newDebt.DueDate == default)
            {
                throw new Exception("Due date is required for debts.");
            }

            var debtToAdd = new Models.Debt
            {
                Title = newTransaction.Title,
                Status = "Pending",
                Amount = newTransaction.Amount,
                DueDate = newDebt.DueDate,
                ClearedDate = null,
                Source = newDebt.Source
            };

            await DebtService.AddDebt(debtToAdd);
        }

        // Update UI or recalculate totals if needed
